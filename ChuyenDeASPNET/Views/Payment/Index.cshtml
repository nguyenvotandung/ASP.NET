@{
    ViewBag.Title = "Thanh toán thành công";
}

<h2 class="text-center">Thanh toán thành công</h2>

<p class="text-center text-success">Cảm ơn bạn đã mua hàng! Tổng số tiền: <strong>@ViewBag.TotalAmount.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))</strong></p>

<h3 class="mt-4">Chi tiết đơn hàng:</h3>

@if (ViewBag.OrderDetails != null && ViewBag.OrderDetails.Count > 0)
{
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Tổng tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.OrderDetails)
            {
                <tr>
                    <td>@item.Product.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.Product.Price.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))</td>
                    <td>@(item.Quantity * item.Product.Price).ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="alert alert-warning">Không có sản phẩm trong đơn hàng.</p>
}

<div class="text-center mt-4">
    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Tiếp tục mua hàng</a>
</div>

<hr>

<section class="section-content padding-y">
    <div class="container">
        <div class="row">
            <main class="col-md-9">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Thông tin thanh toán</h5>
                        <dl class="dlist-align">
                            <dt>Tổng giá:</dt>
                            <dd class="text-right">@ViewBag.TotalAmount.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))</dd>
                        </dl>
                        <hr>
                        <p class="text-center mb-3">
                            <img src="~/Content/images/misc/payments.png" height="26">
                        </p>
                    </div> <!-- card-body -->
                </div>  <!-- card -->
            </main> <!-- col -->
            
        </div>
    </div> <!-- container -->
</section>
